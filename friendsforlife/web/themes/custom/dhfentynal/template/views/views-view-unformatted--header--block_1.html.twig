{% if title %}
  <h3>{{ title }}</h3>
{% endif %}
{% for row in rows %}
  {%
    set row_classes = [
      default_row_class ? 'views-row',
    ]
  %}
  
  <div class="header-list">
    <div class="header-list-in">
      <div class="h-image">{{ view.style_plugin.getField(loop.index0, 'field_media_image') }}</div>
        <div class="h-title">
          <div class="h-titlebg" style="background: {{ view.style_plugin.getField(loop.index0, 'field_page_color') }}; "></div>
          <div class="container">
            <div class="h-title-in" style="background: {{ view.style_plugin.getField(loop.index0, 'field_page_color') }}; ">
              {{ view.style_plugin.getField(loop.index0, 'title') }}
            </div>
          </div>
        </div>
    </div>
  </div>
 
{% endfor %}





